@model IEnumerable<SFI.Models.Movie>
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("Add Movie", "Add", "Movies")

@if (!Model.Any())
{
    <p>We don't have any Movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movies Name</th>
                <th>Movies Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Type</td>
                <td>
                    @Html.ActionLink("View", "Details", "Movies", new { id = movie.Id },  null) |
                    @Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "Movies", new { id = movie.Id }, null)
                </td>
            </tr>
            }
        </tbody>
    </table>
}






